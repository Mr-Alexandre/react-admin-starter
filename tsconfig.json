{
    "compilerOptions": {
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "incremental": true,
        "baseUrl": "./",
        "jsx": "react",
        "paths": {
            "@public/*": ["public/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@config/*": ["src/config/*"],
            "@context/*": ["src/context/*"],
            "@domain/*": ["src/domain/*"],
            "@environment": ["src/environments/index.ts"],
            "@hooks/*": ["src/hooks/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@layouts/*": ["src/layouts/*"],
            "@modules/*": ["src/modules/*"],
            "@route-guard/*": ["src/route-guard/*"],
            "@services/*": ["src/services/*"],
            "@stores/*": ["src/stores/*"],
            "@utils/*": ["src/utils/*"],
            "@styles/*": ["src/styles/*"]
        },
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ]
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
